{
  "name": "refactools",
  "publisher": "lucasols",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "build": " pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts && vsce package",
    "dev": "tsup --watch --dts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "prettier": "^3.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "vscode": ">=1.83.0",
    "node": ">=18.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "refactools.listRefactorings",
        "title": "Start Refactoring",
        "category": "Refactools"
      },
      {
        "command": "refactools.refactoringOptions",
        "title": "Current refactoring options",
        "category": "Refactools"
      },
      {
        "command": "refactools.updateWorkspaceApiTypes",
        "title": "Create/Update workspace refactools API types",
        "category": "Refactools"
      },
      {
        "command": "refactools.acceptRefactoring",
        "title": "Accept Refactoring",
        "category": "Refactools",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "refactools.refactoringOptions",
          "when": "refactools.refactoringOptionsAvailable"
        }
      ],
      "editor/title": [
        {
          "command": "refactools.acceptRefactoring",
          "when": "isInDiffEditor",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "esbuild": "^0.19.5",
    "evtmitter": "^0.3.3",
    "minimatch": "^9.0.3"
  }
}
